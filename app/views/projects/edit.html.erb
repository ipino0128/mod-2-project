<div class="form">
  <br>
  <h2>Edit project:</h2><br>
  <%= form_for @project do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %> <br>

      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :name %>  <br>

      <%= f.label :description %>
      <%= f.text_area :description, :cols => "75", :rows => "12" %> <br>

      <%= f.label :funds_needed, "Funds needed: $" %>
      <%= f.number_field :funds_needed %> <br>

      <%= f.label :project_photo%>
      <%= f.file_field :project_photo %> <br>

      <%= f.submit %>
    <% end %>

</div>
