<!DOCTYPE html>
<html>
  <head>
    <title>Bright Ideas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Jquery Script -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.js Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <!-- Bootstrap Complete JS-->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <!-- Complete CSS CDN -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"></script>


    <!--Google font -->
    <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Kodchasan" rel="stylesheet">

  </head>

  <body>
        <div class="header sticky-top" id="myHeader">
          <span> <a href="/">BRIGHT<img src='https://d2v9y0dukr6mq2.cloudfront.net/video/thumbnail/4M04x-Kueijnfl2yb/shining-light-bulb-with-human-brain-big-idea-innovation-concept-hd-graphic-animation_r4g_iae8x_thumbnail-full12.png' width='120' height='80'>IDEAS </a></span>
        <div class="login_logout">
              <% if logged_in? %>
                Welcome, <%= current_user.first_name %><br>
                <%= form_tag '/logout', method: "post" do %>
                <input type=submit value="Logout"><br>
                  <%end%>
              <% else %>
                <%= form_tag '/login', method: "get" do %>
                  <input type=submit value="Login"><br>
                <%end%>
              <% end %>
        </div>
        <div class="mini-header">
          <% if logged_in? %>
          <%= link_to "My Profile", user_path(current_user.id) %>&nbsp | &nbsp<%= link_to "Start a Project", new_project_path %>&nbsp | &nbsp<%= link_to "My Notes", note_path(current_user.id)%>&nbsp | &nbsp<%= link_to "My Stats", stat_path(current_user.id) %>
          <% end %>
        </div>
      </div>
    <%= yield %>
  </body>
</html>
