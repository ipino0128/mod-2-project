<div class="hero-image">


  <div class ="hero-text">
    <h1>Log in:</h1>
    <br><br>
    <div class="error"> <%= flash.notice %></div>
    <%= form_for @user, url: login_path, method: "post" do |f| %>
      <%= f.label :username %><br>
      <%= f.text_field :username, placeholder: "Enter username" %>
      <br><br>
      <%= f.label :password %><br>
      <%= f.password_field :password, placeholder: "Enter password"%>
      <br><br>
      <%= f.submit "Login" %>
      <br><br>
      or <%= link_to "Create an account", new_user_path %>
    <% end %>
    </div>
</div>
